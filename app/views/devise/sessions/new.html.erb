<div class="login-page d-flex align-items-center justify-content-center mt-5">
  <div class="login-card shadow-lg p-5 rounded">
    <div class="login-header text-center mb-4">
      <h1 class="login-title">Bem-vindo ao <span class="brand-highlight">SGPIC</span></h1>
      <p class="text-muted">Fa√ßa login para continuar</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-4">
        <div class="input-wrapper">
          <%= f.email_field :email, placeholder: "Digite seu email", autofocus: true, autocomplete: "email", class: "form-control form-control-modern" %>
          <div class="input-field-icon">
            <i class="bi bi-envelope input-icon"></i>
          </div>
        </div>
      </div>

      <div class="form-group mb-4">
        <div class="input-wrapper">
          <%= f.password_field :password, placeholder: "Digite sua senha", autocomplete: "current-password", class: "form-control form-control-modern password-input" %>
          <button type="button" class="input-field-icon password-toggle" data-target-class="password-input">
            <i class="bi bi-eye input-icon"></i>
          </button>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start mb-4">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid mb-4">
        <%= f.submit "Entrar", class: "btn-modern" do %>
          <i class="bi bi-box-arrow-in-right"></i> Entrar
        <% end %>
      </div>

      <div class="text-center">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-decoration-none text-muted small" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
