<div class="profile-container container my-5">
  <h1 class="page-title text-center mb-5 mt-5">Dados do Perfil</h1>

  <div class="card shadow-sm mb-4">
    <div class="card-header profile-header">
      <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>Informações Pessoais</h5>
    </div>
    <div class="card-body profile-data">
      <p><strong><%= Researcher.human_attribute_name("name") %>:</strong> <%= @researcher.name %></p>
      <p><strong><%= Researcher.human_attribute_name("phone_number") %>:</strong> <%= @researcher.phone_number %></p>
      <p><strong><%= Researcher.human_attribute_name("academic_field") %>:</strong> <%= @researcher.academic_field %></p>
      <p><strong><%= Researcher.human_attribute_name("cv_link") %>:</strong> <%= @researcher.cv_link %></p>
      <p><strong><%= Researcher.human_attribute_name("orcid_id") %>:</strong> <%= @researcher.orcid_id %></p>
      <p><strong><%= Researcher.human_attribute_name("academic_title") %>:</strong> <%= @researcher.academic_title %></p>
      <p><strong><%= Researcher.human_attribute_name("email") %>:</strong> <%= @researcher.user.email %></p>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header profile-header">
      <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Endereço</h5>
    </div>
    <div class="card-body">
      <p>
        <strong><%= Address.model_name.human %>:</strong> <%= @researcher.address.street %>, <%= @researcher.address.district %>,
        <%= @researcher.address.complement %>, <%= @researcher.address.city %>-<%= @researcher.address.state %>,
        <%= @researcher.address.postal_code %>
      </p>
    </div>
  </div>

  <div class="d-flex justify-content-start gap-2 mt-4">
    <% if current_user.role == 'supervisor' %>
      <%= link_to researchers_path, class: "btn btn-sm btn-secondary custom-btn" do %>
        <i class="bi bi-arrow-left"></i> Voltar
      <% end %>
    <% else %>
      <%= link_to root_path, class: "btn btn-sm btn-secondary custom-btn" do %>
        <i class="bi bi-arrow-left"></i> Voltar
      <% end %>
    <% end %>

    <%= link_to 'Editar', edit_researcher_path(id: EncryptionService.encrypt(@researcher.id)), class: "btn btn-sm btn-warning custom-btn" %>
  </div>
</div>
